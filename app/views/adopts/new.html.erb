<h1> Adopt a New Pet </h1>
<%= form_tag '/adopts' do %>
  <% @favs.pets.each do |pet_id, pet_info| %>
    <%= check_box_tag("#{pet_id}", "#{pet_id}") %>
    <%= link_to pet_info["name"], "/pets/#{pet_id}" %>
  <% end %>

  <%= label_tag :name %>
  <%= text_field_tag :name %><br>

  <%= label_tag :address %>
  <%= text_field_tag :address %><br>

  <%= label_tag :city %>
  <%= text_field_tag :city %><br>

  <%= label_tag :state %>
  <%= text_field_tag :state %><br>

  <%= label_tag :phone %>
  <%= text_field_tag :phone %><br>

  <%= label_tag :description %>
  <%= text_field_tag :description %><br>

  <%= submit_tag "Submit" %>
<% end %>


<h1>Your Favorite Pets</h1>
<% if @favorites %>
  <% @favorites.each do |favorite| %>
  <section id="favorite-<%= favorite[:pet_id] %>">
    <img src=<%= favorite.pet.image %>>
    <h4><%= link_to "#{favorite.pet.name}", "/pets/#{favorite.pet.id}" %></h4></br>
    <h4><%= button_to "Remove #{favorite.pet.name}", "/favorites/#{favorite.id}", method: :delete %></h4></br>
  </section>
  <% end %>
  <% else %>
  <p><%= "Go Look For Your Fur-ever Friends On Our Site" %></p>
<% end %>
<h3><%= button_to "Remove All Favorited Pets", "/favorites", method: :delete %></h3>

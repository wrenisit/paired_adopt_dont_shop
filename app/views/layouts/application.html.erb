<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <p class="alert"><%= alert %></p>

     <nav>
       <nav_items><li><%= link_to "View all pets", "/pets" %></li></nav_items>
       <nav_items><li><%= link_to "View all shelters", "/shelters" %></li></nav_items>
       <nav_items><li><%= link_to "Favorite Pets: #{session[:favorites]&.count} ", "/favorites" %></li></nav_items>
     </nav>

     <% flash.each do |type, message| %>
      <p><%= message %></p>
     <% end %>

    <%= yield %>
  </body>
</html>

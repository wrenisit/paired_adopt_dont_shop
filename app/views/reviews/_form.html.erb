<%= form_tag path, method: method do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>

  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([1,2,3,4,5]) %>

  <%= label_tag :content %>
  <%= text_field_tag :content %>

  <%= label_tag :upload_optional_picture %>
  <%= text_field_tag :opt_picture %>

  <%= submit_tag button_text %>
<% end %>

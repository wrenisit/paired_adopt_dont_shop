<h1> Create a review for <%= @shelter.name %> </h1>

  <%= form_tag "/shelters/#{@shelter.id}/new_review" do %>
    <%= label_tag :title %>
    <%= text_field_tag :title %></br>

    <%= label_tag :rating %>
    <%= select_tag :rating, options_for_select([1,2,3,4,5]) %></br>

    <%= label_tag :content %>
    <%= text_field_tag :content %></br>

    <%= submit_tag "Create new review" %>
  <% end %>

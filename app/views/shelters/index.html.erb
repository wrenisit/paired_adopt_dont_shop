<% @shelters %>

<h1>Shelters</h1>
<% @shelters.each do |shelter| %>
  <h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>
  <h4><%= link_to "Edit #{shelter.name}", "/shelters/#{shelter.id}/edit" %></h4></br>
  <h4><%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %></h4></br>

<% end %>

<h2><a href="/shelters/new">Create New Shelter</a></h2>
